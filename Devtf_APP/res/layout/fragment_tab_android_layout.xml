<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/fragment_tab_employ_layout" />

    <LinearLayout
        android:id="@+id/menuBarLayout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/currentPageTV"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:background="@color/teal_a400"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/previousPageTV"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="上一页"
            android:textColor="@color/teal_a200"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nextPageTV"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下一页"
            android:textColor="@color/teal_a200"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>
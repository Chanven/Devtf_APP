<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.devtf_l.app"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dip"
    android:scrollbars="vertical"
    app:cardBackgroundColor="@color/light_green_500"
    app:cardCornerRadius="@dimen/item_circular_radius"
    app:cardElevation="2dip"
    app:cardPreventCornerOverlap="false"
    app:contentPaddingLeft="5dip" >

    <RelativeLayout
        android:id="@+id/contentRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/recycler_item_drawable_right"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/menuIV"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="5dp"
            android:layout_marginStart="8dip"
            android:background="@drawable/overflow_selector"
            android:padding="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_overflow_dark" />

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/menuIV"
            android:layout_toStartOf="@id/menuIV"
            android:text="面向对象设计六大基本原则-以Volley为例"
            android:textColor="@color/light_green_700"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/jobNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/titleTV"
            android:layout_marginBottom="8dip"
            android:layout_marginTop="8dip"
            android:layout_toLeftOf="@id/menuIV"
            android:layout_toStartOf="@id/menuIV"
            android:text="Android开发岗位"
            android:textColor="@color/gray_light"
            android:visibility="gone"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/descTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/jobNameTV"
            android:layout_toLeftOf="@id/menuIV"
            android:layout_toStartOf="@id/menuIV"
            android:text="工资高 环境好 福利佳 奖金多 妹纸漂亮 棒棒哒"
            android:textColor="@color/gray_medium"
            android:textSize="15sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
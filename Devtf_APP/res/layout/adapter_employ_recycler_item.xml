<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dip"
    android:background="@drawable/recycler_item_drawable"
    android:scrollbars="vertical" >

    <TextView
        android:id="@+id/leftTag"
        android:layout_width="@dimen/item_circular_radius"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/green_a200" />

    <ImageView
        android:id="@+id/menuIV"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="14dp"
        android:layout_marginStart="8dip"
        android:background="@drawable/overflow_selector"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_overflow_dark" />

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_toEndOf="@id/leftTag"
        android:layout_toLeftOf="@id/menuIV"
        android:layout_toRightOf="@id/leftTag"
        android:layout_toStartOf="@id/menuIV"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/companyNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:text="友盟"
            android:textColor="@color/green_a200"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/jobNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:text="Android开发岗位"
            android:textColor="@color/gray_light"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/postTemptTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:text="工资高 环境好 福利佳 奖金多 妹纸漂亮 棒棒哒"
            android:textColor="@color/gray_medium"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>
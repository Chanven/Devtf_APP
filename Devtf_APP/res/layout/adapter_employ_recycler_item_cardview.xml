<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dip"
    android:scrollbars="vertical"
    card_view:cardCornerRadius="4dp" >

    <RelativeLayout
        android:id="@+id/contentRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/item_circular_radius"
        android:background="@drawable/recycler_item_drawable_right" >

        <ImageView
            android:id="@+id/menuIV"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="14dp"
            android:layout_marginStart="8dip"
            android:background="@drawable/overflow_selector"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_overflow_dark" />

        <TextView
            android:id="@+id/companyNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_toLeftOf="@id/menuIV"
            android:layout_toStartOf="@id/menuIV"
            android:text="友盟"
            android:textColor="@color/light_green_700"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/jobNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/companyNameTV"
            android:layout_margin="8dip"
            android:layout_toLeftOf="@id/menuIV"
            android:layout_toStartOf="@id/menuIV"
            android:text="Android开发岗位"
            android:textColor="@color/gray_light"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/postTemptTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/jobNameTV"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_toLeftOf="@id/menuIV"
            android:layout_toStartOf="@id/menuIV"
            android:text="工资高 环境好 福利佳 奖金多 妹纸漂亮 棒棒哒"
            android:textColor="@color/gray_medium"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/leftTag"
        android:layout_width="@dimen/item_circular_radius"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/contentRL"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/contentRL"
        android:background="@drawable/recycler_item_drawable_left" />

</android.support.v7.widget.CardView>